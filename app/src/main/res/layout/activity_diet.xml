<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/onboarding_background"
    tools:context=".DietActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primary_blue"
                android:orientation="horizontal"
                android:padding="24dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Diet"
                    android:textColor="@color/white"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/add_meal_fab"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    app:cardCornerRadius="28dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardElevation="4dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@android:drawable/ic_input_add"
                        android:tint="@color/primary_blue"
                        android:contentDescription="Add Meal" />

                </androidx.cardview.widget.CardView>

                <ImageView
                    android:id="@+id/diet_settings_button"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/heart_pulse_blue"
                    android:tint="@color/white"
                    android:contentDescription="Settings"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="4dp" />

            </LinearLayout>

            <!-- Today's Summary Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#2C3E50"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:text="Today's Summary"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium" />

                <!-- Calorie Summary -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="24dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Goal"
                            android:textColor="@color/onboarding_text_secondary"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif" />

                        <TextView
                            android:id="@+id/calorie_goal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2200 kcal"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Consumed"
                            android:textColor="@color/onboarding_text_secondary"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif" />

                        <TextView
                            android:id="@+id/calorie_consumed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1270 kcal"
                            android:textColor="@color/primary_blue"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Remaining"
                            android:textColor="@color/onboarding_text_secondary"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif" />

                        <TextView
                            android:id="@+id/calorie_remaining"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="930 kcal"
                            android:textColor="#00C851"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium" />

                    </LinearLayout>

                    <!-- Progress Bar -->
                    <ProgressBar
                        android:id="@+id/calorie_progress"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:progress="58"
                        android:progressTint="@color/primary_blue"
                        android:progressBackgroundTint="#3A4A5A" />

                </LinearLayout>

                <!-- Macronutrients Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Macronutrients"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Protein -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Protein"
                                android:textColor="@color/primary_blue"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:id="@+id/protein_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="85g"
                                android:textColor="@color/primary_blue"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium" />

                        </LinearLayout>

                        <ProgressBar
                            android:id="@+id/protein_progress"
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:progress="68"
                            android:progressTint="@color/primary_blue"
                            android:progressBackgroundTint="#3A4A5A" />

                    </LinearLayout>

                    <!-- Carbs -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Carbs"
                                android:textColor="#FF9500"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:id="@+id/carbs_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="190g"
                                android:textColor="#FF9500"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium" />

                        </LinearLayout>

                        <ProgressBar
                            android:id="@+id/carbs_progress"
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:progress="76"
                            android:progressTint="#FF9500"
                            android:progressBackgroundTint="#3A4A5A" />

                    </LinearLayout>

                    <!-- Fat -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Fat"
                                android:textColor="#8E44AD"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:id="@+id/fat_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="60g"
                                android:textColor="#8E44AD"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium" />

                        </LinearLayout>

                        <ProgressBar
                            android:id="@+id/fat_progress"
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:progress="82"
                            android:progressTint="#8E44AD"
                            android:progressBackgroundTint="#3A4A5A" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Meal Plans Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:text="Meal Plans for You"
                    android:textColor="@color/onboarding_text_primary"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/high_protein_plan"
                            android:layout_width="280dp"
                            android:layout_height="160dp"
                            android:layout_marginEnd="16dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="4dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:background="@drawable/onboarding_1"
                                android:padding="20dp"
                                android:gravity="bottom">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="High Protein Plan"
                                    android:textColor="@color/white"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:fontFamily="sans-serif-medium" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="Build muscle with our protein-rich meal plan"
                                    android:textColor="@color/white"
                                    android:textSize="12sp"
                                    android:alpha="0.9"
                                    android:fontFamily="sans-serif" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/weight_loss_plan"
                            android:layout_width="280dp"
                            android:layout_height="160dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="4dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:background="@drawable/onboarding_2"
                                android:padding="20dp"
                                android:gravity="bottom">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Weight Loss Diet"
                                    android:textColor="@color/white"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:fontFamily="sans-serif-medium" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="Healthy meals to help you reach your goals"
                                    android:textColor="@color/white"
                                    android:textSize="12sp"
                                    android:alpha="0.9"
                                    android:fontFamily="sans-serif" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </HorizontalScrollView>

            </LinearLayout>

            <!-- Today's Meals Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="24dp"
                android:paddingBottom="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:text="Today's Meals"
                    android:textColor="@color/onboarding_text_primary"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium" />

                <!-- Meals RecyclerView -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/meals_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false" />

            </LinearLayout>

            <!-- Nutrition Tips Section -->
            <androidx.cardview.widget.CardView
                android:id="@+id/nutrition_tips_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="#2C3E50"
                app:cardElevation="4dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:orientation="vertical"
                    android:background="@drawable/onboarding_3"
                    android:padding="20dp"
                    android:gravity="bottom">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nutrition Tips"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="12dp"
                        android:text="Learn how to balance your diet for optimal results"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:alpha="0.9"
                        android:fontFamily="sans-serif" />

                    <Button
                        android:id="@+id/read_more_button"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:background="@color/white"
                        android:text="Read More"
                        android:textColor="@color/onboarding_text_primary"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:textAllCaps="false"
                        android:paddingHorizontal="16dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Add Meal Button -->
            <androidx.cardview.widget.CardView
                android:id="@+id/add_meal_button_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginBottom="100dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="@color/primary_blue"
                app:cardElevation="4dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_input_add"
                        android:tint="@color/white"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add Meal"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="#2C3E50"
        android:elevation="8dp"
        android:paddingVertical="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/heart_pulse_blue"
                android:tint="@color/onboarding_text_secondary"
                android:contentDescription="Home" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Home"
                android:textColor="@color/onboarding_text_secondary"
                android:textSize="10sp"
                android:fontFamily="sans-serif" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_workouts"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/workout_icon"
                android:tint="@color/onboarding_text_secondary"
                android:contentDescription="Workouts" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Workouts"
                android:textColor="@color/onboarding_text_secondary"
                android:textSize="10sp"
                android:fontFamily="sans-serif" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_diet"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/diet_icon"
                android:tint="@color/primary_blue"
                android:contentDescription="Diet" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Diet"
                android:textColor="@color/primary_blue"
                android:textSize="10sp"
                android:fontFamily="sans-serif" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_goals"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/goals_icon"
                android:tint="@color/onboarding_text_secondary"
                android:contentDescription="Goals" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Goals"
                android:textColor="@color/onboarding_text_secondary"
                android:textSize="10sp"
                android:fontFamily="sans-serif" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_reminders"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/heart_pulse_blue"
                android:tint="@color/onboarding_text_secondary"
                android:contentDescription="Reminders" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Reminders"
                android:textColor="@color/onboarding_text_secondary"
                android:textSize="10sp"
                android:fontFamily="sans-serif" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_analytics"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/heart_pulse_blue"
                android:tint="@color/onboarding_text_secondary"
                android:contentDescription="Analytics" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Analytics"
                android:textColor="@color/onboarding_text_secondary"
                android:textSize="10sp"
                android:fontFamily="sans-serif" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>