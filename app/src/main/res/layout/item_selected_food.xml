<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardBackgroundColor="#3A4A5A"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/selected_food_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Greek Yogurt"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/selected_food_portion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="1 cup (200g)"
                android:textColor="@color/onboarding_text_secondary"
                android:textSize="12sp"
                android:fontFamily="sans-serif" />

        </LinearLayout>

        <TextView
            android:id="@+id/selected_food_calories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="120 kcal"
            android:textColor="@color/primary_blue"
            android:textSize="14sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_marginEnd="12dp" />

        <ImageView
            android:id="@+id/remove_food_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:tint="#FF6B6B"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            android:contentDescription="Remove" />

    </LinearLayout>

</androidx.cardview.widget.CardView>