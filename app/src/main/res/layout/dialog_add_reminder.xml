<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_background">

    <!-- Background Image -->
    <ImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/add_reminder"
        android:scaleType="centerCrop" />

    <!-- Overlay for better text readability -->
    <View
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:background="#80000000" />

    <!-- Close button positioned over background image -->
    <ImageView
        android:id="@+id/close_reminder_dialog"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:src="@android:drawable/ic_menu_revert"
        android:tint="@color/white"
        android:background="#40000000"
        android:padding="8dp"
        android:clickable="true"
        android:focusable="true" />

    <!-- Form Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/background_image"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/dark_background"
            android:padding="24dp">

            <!-- Dialog Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Reminder"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="24dp" />

            <!-- Title Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="8dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="@color/card_background"
                app:cardElevation="0dp">

                <EditText
                    android:id="@+id/reminder_title_input"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="e.g. Morning Workout"
                    android:textColorHint="@color/gray_text"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif"
                    android:background="@android:color/transparent"
                    android:paddingHorizontal="16dp"
                    android:inputType="text"
                    android:maxLines="1" />

            </androidx.cardview.widget.CardView>

            <!-- Reminder Type Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reminder Type"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="24dp">

                <!-- Workout Type -->
                <LinearLayout
                    android:id="@+id/workout_type_button"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/button_blue_rounded"
                    android:layout_marginEnd="8dp"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/workout_icon"
                        android:tint="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Workout"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <!-- Water Type -->
                <LinearLayout
                    android:id="@+id/water_type_button"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@color/card_background"
                    android:layout_marginHorizontal="4dp"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/water"
                        android:tint="@color/primary_blue" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Water"
                        android:textColor="@color/gray_text"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <!-- Meal Type -->
                <LinearLayout
                    android:id="@+id/meal_type_button"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@color/card_background"
                    android:layout_marginStart="8dp"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/diet_icon"
                        android:tint="@color/primary_blue" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Meal"
                        android:textColor="@color/gray_text"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Time Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="8dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="@color/card_background"
                app:cardElevation="0dp">

                <EditText
                    android:id="@+id/reminder_time_input"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="45 min"
                    android:textColorHint="@color/gray_text"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif"
                    android:background="@android:color/transparent"
                    android:paddingHorizontal="16dp"
                    android:inputType="text"
                    android:maxLines="1" />

            </androidx.cardview.widget.CardView>

            <!-- Repeat Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Repeat"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="32dp">

                <Button
                    android:id="@+id/day_m"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/indicator_inactive"
                    android:text="M"
                    android:textColor="@color/gray_text"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/day_t1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/indicator_inactive"
                    android:text="T"
                    android:textColor="@color/gray_text"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/day_w"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/indicator_inactive"
                    android:text="W"
                    android:textColor="@color/gray_text"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/day_t2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/indicator_inactive"
                    android:text="T"
                    android:textColor="@color/gray_text"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/day_f"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/indicator_inactive"
                    android:text="F"
                    android:textColor="@color/gray_text"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/day_s1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/indicator_inactive"
                    android:text="S"
                    android:textColor="@color/gray_text"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/day_s2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/indicator_inactive"
                    android:text="S"
                    android:textColor="@color/gray_text"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textAllCaps="false" />

            </LinearLayout>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end">

                <Button
                    android:id="@+id/cancel_reminder_button"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginEnd="16dp"
                    android:background="@android:color/transparent"
                    android:text="Cancel"
                    android:textColor="@color/gray_text"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:textAllCaps="false"
                    android:paddingHorizontal="24dp"
                    style="?attr/borderlessButtonStyle" />

                <Button
                    android:id="@+id/save_reminder_button"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:background="@drawable/button_blue_rounded"
                    android:text="Save Reminder"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:textAllCaps="false"
                    android:paddingHorizontal="24dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>