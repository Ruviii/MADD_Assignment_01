<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_background">

    <!-- Background Image -->
    <ImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/add_workout"
        android:scaleType="centerCrop" />

    <!-- Overlay for better text readability -->
    <View
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:background="#80000000" />

    <!-- Close button positioned over background image -->
    <ImageView
        android:id="@+id/close_dialog"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:src="@android:drawable/ic_menu_revert"
        android:tint="@color/white"
        android:background="#40000000"
        android:padding="8dp"
        android:clickable="true"
        android:focusable="true" />

    <!-- Form Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:background="@color/dark_background"
        android:padding="24dp">

        <!-- Dialog Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Workout"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="24dp" />

        <!-- Workout Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Workout Name"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:fontFamily="sans-serif" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/card_background"
            app:cardElevation="0dp">

            <EditText
                android:id="@+id/workout_name_input"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="e.g. Morning Run"
                android:textColorHint="@color/gray_text"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:background="@android:color/transparent"
                android:paddingHorizontal="16dp"
                android:inputType="text"
                android:maxLines="1" />

        </androidx.cardview.widget.CardView>

        <!-- Workout Type -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Workout Type"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:fontFamily="sans-serif" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/card_background"
            app:cardElevation="0dp">

            <Spinner
                android:id="@+id/workout_type_spinner"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:paddingHorizontal="16dp"
                android:dropDownWidth="match_parent" />

        </androidx.cardview.widget.CardView>

        <!-- Date and Duration Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <!-- Date -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Date"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="@color/card_background"
                    app:cardElevation="0dp">

                    <EditText
                        android:id="@+id/workout_date_input"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="mm/dd/yyyy"
                        android:textColorHint="@color/gray_text"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif"
                        android:background="@android:color/transparent"
                        android:paddingHorizontal="16dp"
                        android:inputType="date"
                        android:focusable="false"
                        android:clickable="true"
                        android:maxLines="1"
                        android:drawableEnd="@android:drawable/ic_menu_month"
                        android:drawableTint="@color/gray_text" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Duration -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Duration (min)"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="@color/card_background"
                    app:cardElevation="0dp">

                    <EditText
                        android:id="@+id/workout_duration_input"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="30"
                        android:textColorHint="@color/gray_text"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif"
                        android:background="@android:color/transparent"
                        android:paddingHorizontal="16dp"
                        android:inputType="number"
                        android:maxLines="1" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

        <!-- Calories Burned -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Calories Burned"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:fontFamily="sans-serif" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/card_background"
            app:cardElevation="0dp">

            <EditText
                android:id="@+id/workout_calories_input"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="300"
                android:textColorHint="@color/gray_text"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:background="@android:color/transparent"
                android:paddingHorizontal="16dp"
                android:inputType="number"
                android:maxLines="1" />

        </androidx.cardview.widget.CardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/cancel_button"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginEnd="16dp"
                android:background="@android:color/transparent"
                android:text="Cancel"
                android:textColor="@color/gray_text"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:textAllCaps="false"
                android:paddingHorizontal="24dp"
                style="?attr/borderlessButtonStyle" />

            <Button
                android:id="@+id/save_workout_button"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:background="@drawable/button_blue_rounded"
                android:text="Save Workout"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:textAllCaps="false"
                android:paddingHorizontal="24dp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>