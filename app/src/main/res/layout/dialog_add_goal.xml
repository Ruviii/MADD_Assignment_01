<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_background">

    <!-- Background Image -->
    <ImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/add_goal"
        android:scaleType="centerCrop" />

    <!-- Overlay for better text readability -->
    <View
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:background="#80000000" />

    <!-- Close button positioned over background image -->
    <ImageView
        android:id="@+id/close_goal_dialog"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:src="@android:drawable/ic_menu_revert"
        android:tint="@color/white"
        android:background="#40000000"
        android:padding="8dp"
        android:clickable="true"
        android:focusable="true" />

    <!-- Form Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/background_image"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/dark_background"
            android:padding="24dp">

            <!-- Dialog Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add New Goal"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="24dp" />

            <!-- Goal Name Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Goal Name"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:fontFamily="sans-serif" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="@color/card_background"
                app:cardElevation="0dp">

                <EditText
                    android:id="@+id/goal_name_input"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="e.g. Lose 5kg"
                    android:textColorHint="@color/gray_text"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif"
                    android:background="@android:color/transparent"
                    android:paddingHorizontal="16dp"
                    android:inputType="text"
                    android:maxLines="1" />

            </androidx.cardview.widget.CardView>

            <!-- Category Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Category"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:fontFamily="sans-serif" />

            <!-- Category Grid -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <!-- First Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/category_weight"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="8dp"
                        app:cardBackgroundColor="@color/card_background"
                        app:cardElevation="2dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">

                            <View
                                android:id="@+id/weight_indicator"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:background="@drawable/indicator_active"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Weight"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/category_cardio"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="4dp"
                        app:cardCornerRadius="8dp"
                        app:cardBackgroundColor="@color/card_background"
                        app:cardElevation="2dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">

                            <View
                                android:id="@+id/cardio_indicator"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:background="@drawable/indicator_inactive"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cardio"
                                android:textColor="@color/gray_text"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/category_strength"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        app:cardCornerRadius="8dp"
                        app:cardBackgroundColor="@color/card_background"
                        app:cardElevation="2dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">

                            <View
                                android:id="@+id/strength_indicator"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:background="@drawable/indicator_inactive"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Strength"
                                android:textColor="@color/gray_text"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <!-- Second Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/category_nutrition"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="8dp"
                        app:cardBackgroundColor="@color/card_background"
                        app:cardElevation="2dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">

                            <View
                                android:id="@+id/nutrition_indicator"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:background="@drawable/indicator_inactive"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nutrition"
                                android:textColor="@color/gray_text"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/category_hydration"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="4dp"
                        app:cardCornerRadius="8dp"
                        app:cardBackgroundColor="@color/card_background"
                        app:cardElevation="2dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">

                            <View
                                android:id="@+id/hydration_indicator"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:background="@drawable/indicator_inactive"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Hydration"
                                android:textColor="@color/gray_text"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/category_activity"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        app:cardCornerRadius="8dp"
                        app:cardBackgroundColor="@color/card_background"
                        app:cardElevation="2dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">

                            <View
                                android:id="@+id/activity_indicator"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:background="@drawable/indicator_inactive"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Activity"
                                android:textColor="@color/gray_text"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

            <!-- Current Value and Target Value Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <!-- Current Value -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Current Value"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="8dp"
                        app:cardBackgroundColor="@color/card_background"
                        app:cardElevation="0dp">

                        <EditText
                            android:id="@+id/current_value_input"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:hint="e.g. 75kg"
                            android:textColorHint="@color/gray_text"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif"
                            android:background="@android:color/transparent"
                            android:paddingHorizontal="16dp"
                            android:inputType="text"
                            android:maxLines="1" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <!-- Target Value -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Target Value"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="8dp"
                        app:cardBackgroundColor="@color/card_background"
                        app:cardElevation="0dp">

                        <EditText
                            android:id="@+id/target_value_input"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:hint="e.g. 70kg"
                            android:textColorHint="@color/gray_text"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif"
                            android:background="@android:color/transparent"
                            android:paddingHorizontal="16dp"
                            android:inputType="text"
                            android:maxLines="1" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

            <!-- Deadline Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Deadline"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:fontFamily="sans-serif" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="@color/card_background"
                app:cardElevation="0dp">

                <EditText
                    android:id="@+id/goal_deadline_input"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="mm/dd/yyyy"
                    android:textColorHint="@color/gray_text"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif"
                    android:background="@android:color/transparent"
                    android:paddingHorizontal="16dp"
                    android:inputType="date"
                    android:focusable="false"
                    android:clickable="true"
                    android:maxLines="1"
                    android:drawableEnd="@android:drawable/ic_menu_month"
                    android:drawableTint="@color/gray_text" />

            </androidx.cardview.widget.CardView>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end">

                <Button
                    android:id="@+id/cancel_goal_button"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginEnd="16dp"
                    android:background="@android:color/transparent"
                    android:text="Cancel"
                    android:textColor="@color/gray_text"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:textAllCaps="false"
                    android:paddingHorizontal="24dp"
                    style="?attr/borderlessButtonStyle" />

                <Button
                    android:id="@+id/add_goal_button"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:background="@drawable/button_blue_rounded"
                    android:text="Add Goal"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:textAllCaps="false"
                    android:paddingHorizontal="24dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>