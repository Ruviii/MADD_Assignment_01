<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_background">

    <!-- Background Image -->
    <ImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/diet_1"
        android:scaleType="centerCrop" />

    <!-- Overlay for better text readability -->
    <View
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:background="#80000000" />

    <!-- Close button positioned over background image -->
    <ImageView
        android:id="@+id/close_meal_dialog"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:src="@android:drawable/ic_menu_revert"
        android:tint="@color/white"
        android:background="#40000000"
        android:padding="8dp"
        android:clickable="true"
        android:focusable="true" />

    <!-- Form Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/background_image"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/dark_background"
            android:padding="24dp">

            <!-- Dialog Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Meal"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="24dp" />

            <!-- Meal Type Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Meal Type"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:fontFamily="sans-serif" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="@color/card_background"
                app:cardElevation="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="?android:attr/selectableItemBackground">

                    <TextView
                        android:id="@+id/meal_type_display"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/dropdown_arrow"
                        android:text="Breakfast"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif"
                        android:gravity="center_vertical"
                        android:background="@android:color/transparent"
                        android:paddingStart="16dp"
                        android:paddingEnd="8dp" />

                    <ImageView
                        android:id="@+id/dropdown_arrow"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="16dp"
                        android:src="@android:drawable/arrow_down_float"
                        android:tint="@color/gray_text" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <!-- Search Food Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Search Food"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:fontFamily="sans-serif" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="@color/card_background"
                app:cardElevation="0dp">

                <EditText
                    android:id="@+id/food_search_input"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Search for food..."
                    android:textColorHint="@color/gray_text"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif"
                    android:background="@android:color/transparent"
                    android:paddingHorizontal="16dp"
                    android:inputType="text"
                    android:maxLines="1" />

            </androidx.cardview.widget.CardView>

            <!-- Food Suggestions -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/food_suggestions_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:maxHeight="200dp"
                android:visibility="gone" />

            <!-- Selected Items Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Selected Items"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:fontFamily="sans-serif" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/selected_items_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:maxHeight="180dp"
                android:nestedScrollingEnabled="true" />

            <!-- Total Calories -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="32dp"
                android:padding="16dp"
                android:background="@color/card_background">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Total Calories"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/total_calories_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="225 kcal"
                    android:textColor="@color/primary_blue"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end">

                <Button
                    android:id="@+id/cancel_meal_button"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginEnd="16dp"
                    android:background="@android:color/transparent"
                    android:text="Cancel"
                    android:textColor="@color/gray_text"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:textAllCaps="false"
                    android:paddingHorizontal="24dp"
                    style="?attr/borderlessButtonStyle" />

                <Button
                    android:id="@+id/add_meal_button"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:background="@drawable/button_blue_rounded"
                    android:text="Add Meal"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:textAllCaps="false"
                    android:paddingHorizontal="24dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</RelativeLayout>